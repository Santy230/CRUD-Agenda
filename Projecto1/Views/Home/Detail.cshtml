@model Projecto1.Models.Contact
@{
    ViewData["Title"] = "Detail Contac";
}

<h1 class="text-center">Detail Contact</h1>
<div class="container mt-4">

    <div class="row">
        <div class="offset-9 col-3 mb-3">
            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary d-block btn-lg mx-auto">
                <i class="fa-solid fa-backward"></i> Back
            </a>
        </div>
    </div>
    <div class="row">
        <div class="offset-12">
            <div class="card border">
                <div class="card-header bg-dark">
                    <h3 class="text-white">
                        <strong>
                            Detail Contact
                        </strong>
                    </h3>
                </div>
                <div class="card body">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>ID </strong>@Html.DisplayFor(m =>m.Id)</li>
                        <li class="list-group-item"><strong>Nombre </strong>@Html.DisplayFor(m =>m.Nombre)</li>
                        <li class="list-group-item"><strong>Telefono </strong>@Html.DisplayFor(m =>m.Telefono)</li>
                        <li class="list-group-item"><strong>Email </strong>@Html.DisplayFor(m => m.Email)</li>
                        <li class="list-group-item"><strong>Fecha Creacion </strong>@Html.DisplayFor(m => m.FechaCreacion)</li>
                    </ul>


                </div>
            </div>
        </div>
    </div>
</div>
