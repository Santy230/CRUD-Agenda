@model IEnumerable<Projecto1.Models.Contact>
@{
    ViewData["Title"] = "Contact's List";
}

<div class="container mt-4">
    <h1 class="display-4 align-content-center">Contects's List </h1>
     <div class="row">
         <div class="offset-9 col-3 mb-3">
             <a asp-action="Create" asp-controller="Home" class="btn btn-primary d-block btn-lg mx-auto" >
                 <i class="fa fa-plus" aria-hidden="true">

                 </i> Nuevo Usuario
             </a>
         </div>
     </div>
     <div class="row">
         <div class="offset-12">
             <div class="card border">
                 <div class="card-header bg-dark">
                     <h3 class="text-white"><strong>
                         Lista de Usuarios
                     </strong></h3>
                 </div>
                 <div class="card body">
                      <div class="table-responsive">
                        @if (Model.Count() > 0)
                        {
                            <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                                        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                        <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                                        <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model){
                                        <tr>
                                            <td>@Html.DisplayFor(m => item.Id)</td>
                                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                                            <td>@Html.DisplayFor(m => item.Telefono)</td>
                                            <td>@Html.DisplayFor(m => item.Email)</td>
                                            <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                            <td>
                                                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil" aria-hidden="true"></i>Edit</a>
                                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-eraser" aria-hidden="true"></i>Delete</a>
                                                <a class="btn btn-secondary" asp-action="Detail" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i>Detail</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p>AIN'T USERS</p>
                        }
                    </div>
                 </div>
             </div>
         </div>
     </div>
</div>
